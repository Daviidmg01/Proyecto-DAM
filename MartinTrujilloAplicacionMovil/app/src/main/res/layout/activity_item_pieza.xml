<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#3498db"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="#2980b9"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre de la pieza -->
        <TextView
            android:id="@+id/textNombrePieza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la pieza"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"/>

        <!-- Cantidad disponible -->
        <TextView
            android:id="@+id/textCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Cantidad disponible: 10"
            android:textColor="#EEEEEE"
            android:textSize="14sp"/>

        <!-- Precio de venta -->
        <TextView
            android:id="@+id/textPrecioVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Precio venta: 15.99â‚¬"
            android:textColor="#EEEEEE"
            android:textSize="14sp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>