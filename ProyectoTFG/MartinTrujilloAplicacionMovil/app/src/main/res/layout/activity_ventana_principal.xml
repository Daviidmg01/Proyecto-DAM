<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".controller.VentanaPrincipal">

    <!-- Barra superior premium con efecto neumorfismo -->
<com.google.android.material.card.MaterialCardView
android:id="@+id/topBarCard"
android:layout_width="match_parent"
android:layout_height="70dp"
app:cardBackgroundColor="#2c3e50"
app:cardCornerRadius="0dp"
app:cardElevation="12dp"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:strokeColor="#3a5169"
app:strokeWidth="1dp">

<TextView
    android:id="@+id/btnNombreApellidos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="HOLA, NOMBRE APELLIDO"
    android:textColor="#FFFFFF"
    android:textSize="20sp"
    android:textStyle="bold"
    android:gravity="center"
    android:letterSpacing="0.03"
    android:fontFamily="sans-serif-condensed"/>
</com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-30dp">

        <!-- Bot칩n Reparaciones con efecto 3D y sombra din치mica -->

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text=""
            android:textColor="#6d8eb0"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text=""
            android:textColor="#6d8eb0"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnReparaciones"
            android:layout_width="320dp"
            android:layout_height="140dp"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="#3498db"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeColor="#2980b9"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_repair"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-condensed"
                    android:letterSpacing="0.03"
                    android:text="REPARACIONES"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Bot칩n Garaje con efecto de profundidad -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnGaraje"
            android:layout_width="320dp"
            android:layout_height="140dp"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="#3498db"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeColor="#2980b9"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_garaje"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-condensed"
                    android:letterSpacing="0.03"
                    android:text="GARAJE"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Bot칩n Piezas con efecto premium -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnPiezas"
            android:layout_width="320dp"
            android:layout_height="140dp"
            app:cardBackgroundColor="#3498db"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeColor="#2980b9"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_parts"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-condensed"
                    android:letterSpacing="0.03"
                    android:text="PIEZAS"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>